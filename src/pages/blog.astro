---
export const prerender = true;
import BaseLayout from '../layouts/BaseLayout.astro';
import { safeFetch } from '../../sanity/lib/client';

const categories = [
  { slug: 'all',          label: 'All Posts' },
  { slug: 'design-tips',  label: 'Design Tips' },
  { slug: 'materials',    label: 'Materials' },
  { slug: 'inspiration',  label: 'Inspiration' },
  { slug: 'how-to',       label: 'How-To' },
  { slug: 'news',         label: 'Company News' },
];

// Fetch all posts from Sanity, ordered newest first
const rawPosts = await safeFetch<any[]>(
  `*[_type == "post"] | order(publishedAt desc) {
    "slug": slug.current,
    title,
    excerpt,
    category,
    readTime,
    "date": coalesce(
      select(
        dateTime(publishedAt) != null => string::split(publishedAt, "T")[0]
      ),
      ""
    ),
    "image": mainImage.asset->url,
    "featured": false
  }`
);

// Graceful empty-state: if no posts in Sanity yet, show nothing
const posts = rawPosts ?? [];

// Mark the first post as featured if we have any
if (posts.length > 0) posts[0].featured = true;

const featured = posts.find((p: any) => p.featured) ?? null;
const grid     = posts.filter((p: any) => !p.featured);
