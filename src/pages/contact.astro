---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Free Consultation | Cast Design Fireplaces | DFW Cast Stone"
  description="Request a free, no-obligation consultation for your cast stone fireplace mantel, surround, or custom stone project. Serving all Dallas–Fort Worth communities."
  canonical="/contact"
>

  <!-- ═══ TOP BAR ═══ -->
  <div class="top-bar">
    <div class="container">
      <div class="top-bar__areas">
        <span>Areas We Serve</span>
        <a href="/service-areas/dallas">Dallas</a>
        <span class="sep">·</span>
        <a href="/service-areas/fort-worth">Fort Worth</a>
        <span class="sep">·</span>
        <a href="/service-areas/plano">Plano</a>
        <span class="sep">·</span>
        <a href="/service-areas/southlake">Southlake</a>
        <span class="sep">·</span>
        <a href="/service-areas/mckinney">McKinney</a>
        <span class="sep">·</span>
        <a href="/service-areas">All DFW</a>
      </div>
      <div class="top-bar__phone">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
        </svg>
        Call for a Free Consultation&nbsp;
        <a href="tel:+12146214820">(214) 621-4820</a>
      </div>
    </div>
  </div>

  <!-- ═══ NAVIGATION ═══ -->
  <nav class="nav" aria-label="Main navigation">
    <div class="container">
      <a href="/" class="nav__logo" aria-label="Cast Design Fireplaces – Home">
        <span class="nav__logo-main">Cast Design</span>
        <span class="nav__logo-sub">Fireplaces</span>
      </a>
      <ul class="nav__links" role="list">
        <li><a href="/gallery">Gallery</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact" class="nav__cta" aria-current="page">Free Consultation</a></li>
      </ul>

      <!-- Hamburger -->
      <button class="nav__hamburger" aria-label="Open menu" aria-expanded="false" aria-controls="mobile-menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </nav>

  <!-- ═══ MOBILE MENU ═══ -->
  <div class="mobile-menu" id="mobile-menu" aria-hidden="true">
    <div class="mobile-menu__backdrop"></div>
    <div class="mobile-menu__panel">
      <div class="mobile-menu__header">
        <a href="/" class="nav__logo" aria-label="Cast Design Fireplaces – Home">
          <span class="nav__logo-main">Cast Design</span>
          <span class="nav__logo-sub">Fireplaces</span>
        </a>
        <button class="mobile-menu__close" aria-label="Close menu">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <nav class="mobile-menu__nav" aria-label="Mobile navigation">
        <ul role="list">
          <li><a href="/gallery">Gallery</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>

      <div class="mobile-menu__footer">
        <a href="/contact" class="mobile-menu__cta" aria-current="page">
          Schedule Free Consultation
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
        <a href="tel:+12146214820" class="mobile-menu__call">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          (214) 621-4820
        </a>
      </div>
    </div>
  </div>

  <script>
    const hamburger = document.querySelector<HTMLButtonElement>('.nav__hamburger');
    const closeBtn  = document.querySelector<HTMLButtonElement>('.mobile-menu__close');
    const backdrop  = document.querySelector<HTMLElement>('.mobile-menu__backdrop');
    const menu      = document.querySelector<HTMLElement>('.mobile-menu');
    function openMenu() {
      menu!.classList.add('is-open');
      menu!.setAttribute('aria-hidden', 'false');
      hamburger!.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }
    function closeMenu() {
      menu!.classList.remove('is-open');
      menu!.setAttribute('aria-hidden', 'true');
      hamburger!.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    }
    hamburger?.addEventListener('click', openMenu);
    closeBtn?.addEventListener('click', closeMenu);
    backdrop?.addEventListener('click', closeMenu);
    document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeMenu(); });
  </script>

  <!-- ═══ PAGE HERO ═══ -->
  <section class="page-hero contact-hero" aria-label="Contact page hero">
    <img
      class="page-hero__bg"
      src="/images/CAST-Design-Company-Modern-Fireplace-Mantel-Modern Living Room.jpg"
      alt="Elegant cast stone fireplace mantel in a luxury DFW home"
      fetchpriority="high"
    />
    <div class="page-hero__overlay" aria-hidden="true"></div>
    <div class="page-hero__content">
      <div class="container">
        <p class="hero__eyebrow">Free Consultation</p>
        <h1 class="page-hero__heading">
          Let's Design Your<br /><em>Perfect Fireplace</em>
        </h1>
        <p class="page-hero__sub">No pressure. No obligation. Just a conversation about your vision.</p>
      </div>
    </div>
  </section>

  <!-- ═══ CONTACT BODY ═══ -->
  <section class="contact-section" aria-labelledby="contact-heading">
    <div class="container">

      <!-- LEFT — context + trust -->
      <div class="contact-info">

        <div class="contact-info__intro">
          <p class="section-label">What Happens Next</p>
          <h2 id="contact-heading" class="contact-info__heading">
            A seamless process from first call to finished piece
          </h2>
          <p class="contact-info__body">
            Whether you have a clear vision or are just starting to explore ideas, our team is here to help. Fill in the form and we'll reach out within one business day to schedule your free in-home consultation.
          </p>
        </div>

        <!-- Steps -->
        <ol class="contact-steps" aria-label="Our consultation process">
          <li class="contact-step">
            <div class="contact-step__num" aria-hidden="true">01</div>
            <div>
              <h3 class="contact-step__title">Submit Your Request</h3>
              <p class="contact-step__desc">Share a few details about your project — takes about 2 minutes.</p>
            </div>
          </li>
          <li class="contact-step">
            <div class="contact-step__num" aria-hidden="true">02</div>
            <div>
              <h3 class="contact-step__title">We Call You Back</h3>
              <p class="contact-step__desc">A Cast Design specialist will follow up within one business day to discuss your project and answer questions.</p>
            </div>
          </li>
          <li class="contact-step">
            <div class="contact-step__num" aria-hidden="true">03</div>
            <div>
              <h3 class="contact-step__title">In-Home Consultation</h3>
              <p class="contact-step__desc">We visit your home, take measurements, and present a custom design concept — completely free of charge.</p>
            </div>
          </li>
          <li class="contact-step">
            <div class="contact-step__num" aria-hidden="true">04</div>
            <div>
              <h3 class="contact-step__title">Your Quote, Guaranteed</h3>
              <p class="contact-step__desc">Receive a detailed, fixed-price quote with no hidden fees. Approve it and we get to work crafting your piece.</p>
            </div>
          </li>
        </ol>

        <!-- Contact details -->
        <div class="contact-details">
          <div class="contact-detail">
            <div class="contact-detail__icon" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
            </div>
            <div>
              <div class="contact-detail__label">Call or Text</div>
              <a href="tel:+12146214820" class="contact-detail__value">(214) 621-4820</a>
            </div>
          </div>
          <div class="contact-detail">
            <div class="contact-detail__icon" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
            </div>
            <div>
              <div class="contact-detail__label">Email Us</div>
              <a href="mailto:hello@castdesignfireplaces.com" class="contact-detail__value">hello@castdesignfireplaces.com</a>
            </div>
          </div>
          <div class="contact-detail">
            <div class="contact-detail__icon" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            </div>
            <div>
              <div class="contact-detail__label">Showroom</div>
              <div class="contact-detail__value">309 N Belt Line Rd #117<br />Irving, TX 75061</div>
            </div>
          </div>
          <div class="contact-detail">
            <div class="contact-detail__icon" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <div class="contact-detail__label">Hours</div>
              <div class="contact-detail__value">Mon – Fri: 8 am – 5 pm<br />Sat: By appointment</div>
            </div>
          </div>
        </div>

      </div><!-- /contact-info -->

      <!-- RIGHT — the form -->
      <div class="contact-form-wrap">
        <div class="contact-form-card" id="form-card">

          <!-- Default: form -->
          <div id="form-view">
            <div class="contact-form-card__header">
              <h2 class="contact-form-card__title">Request Your Free Consultation</h2>
              <p class="contact-form-card__sub">We'll respond within one business day.</p>
              <!-- Step indicator -->
              <div class="form-steps-indicator" aria-label="Form progress">
                <div class="form-steps-indicator__track">
                  <div class="form-steps-indicator__fill" id="steps-fill"></div>
                </div>
                <span class="form-steps-indicator__label" id="steps-label">Step 1 of 3</span>
              </div>
            </div>

            <form id="quote-form" novalidate>

              <!-- ── STEP 1: Project type + style ── -->
              <div class="form-step" id="step-1">
                <div class="form-step__heading">What are you looking for?</div>

                <fieldset class="form-fieldset">
                  <legend class="form-legend sr-only">Project type</legend>
                  <div class="form-tiles">
                    <label class="form-tile">
                      <input type="radio" name="projectType" value="fireplace-mantel" required />
                      <span class="form-tile__inner"><span class="form-tile__label">Fireplace Mantel</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="projectType" value="fireplace-surround" />
                      <span class="form-tile__inner"><span class="form-tile__label">Fireplace Surround</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="projectType" value="outdoor-fireplace" />
                      <span class="form-tile__inner"><span class="form-tile__label">Outdoor Fireplace</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="projectType" value="range-hood" />
                      <span class="form-tile__inner"><span class="form-tile__label">Range Hood</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="projectType" value="corbels-columns" />
                      <span class="form-tile__inner"><span class="form-tile__label">Corbels &amp; Columns</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="projectType" value="custom" />
                      <span class="form-tile__inner"><span class="form-tile__label">Custom Project</span></span>
                    </label>
                  </div>
                  <span class="form-error" id="err-projectType" role="alert"></span>
                </fieldset>

                <div class="form-step__heading" style="margin-top: 24px;">Preferred style</div>
                <fieldset class="form-fieldset">
                  <legend class="form-legend sr-only">Preferred style</legend>
                  <div class="form-tiles form-tiles--sm">
                    <label class="form-tile">
                      <input type="radio" name="style" value="traditional" />
                      <span class="form-tile__inner"><span class="form-tile__label">Traditional</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="style" value="transitional" />
                      <span class="form-tile__inner"><span class="form-tile__label">Transitional</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="style" value="modern" />
                      <span class="form-tile__inner"><span class="form-tile__label">Modern</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="style" value="rustic" />
                      <span class="form-tile__inner"><span class="form-tile__label">Rustic</span></span>
                    </label>
                    <label class="form-tile">
                      <input type="radio" name="style" value="not-sure" />
                      <span class="form-tile__inner"><span class="form-tile__label">Not Sure Yet</span></span>
                    </label>
                  </div>
                </fieldset>

                <div class="form-step__nav">
                  <button type="button" class="btn btn-primary form-next" data-next="2">
                    Next: Project Details
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </button>
                </div>
              </div>

              <!-- ── STEP 2: Project details ── -->
              <div class="form-step" id="step-2" hidden>
                <div class="form-step__heading">Tell us about your project</div>

                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label" for="room">Room / Location</label>
                    <select class="form-select" id="room" name="room">
                      <option value="">Select a room…</option>
                      <option value="living-room">Living Room</option>
                      <option value="master-bedroom">Master Bedroom</option>
                      <option value="great-room">Great Room</option>
                      <option value="dining-room">Dining Room</option>
                      <option value="kitchen">Kitchen</option>
                      <option value="outdoor-patio">Outdoor / Patio</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="fireplaceType">Fireplace Type</label>
                    <select class="form-select" id="fireplaceType" name="fireplaceType">
                      <option value="">Select type…</option>
                      <option value="wood-burning">Wood Burning</option>
                      <option value="gas-insert">Gas Insert</option>
                      <option value="electric">Electric</option>
                      <option value="new-build">New Build / None Yet</option>
                      <option value="not-sure">Not Sure</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label class="form-label" for="timeline">Project Timeline</label>
                  <select class="form-select" id="timeline" name="timeline">
                    <option value="">When are you looking to start?</option>
                    <option value="asap">As soon as possible</option>
                    <option value="1-3-months">1 – 3 months</option>
                    <option value="3-6-months">3 – 6 months</option>
                    <option value="6-plus-months">6+ months / planning ahead</option>
                  </select>
                </div>

                <div class="form-group">
                  <label class="form-label" for="message">Any additional details <span class="form-hint">(optional)</span></label>
                  <textarea class="form-textarea" id="message" name="message" rows="4" placeholder="Inspiration photos, size preferences, existing decor, budget range…"></textarea>
                </div>

                <div class="form-step__nav form-step__nav--split">
                  <button type="button" class="btn btn-outline-dark form-back" data-back="1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                    </svg>
                    Back
                  </button>
                  <button type="button" class="btn btn-primary form-next" data-next="3">
                    Next: Your Info
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                  </button>
                </div>
              </div>

              <!-- ── STEP 3: Contact info ── -->
              <div class="form-step" id="step-3" hidden>
                <div class="form-step__heading">How can we reach you?</div>

                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label" for="fullName">Full Name <span class="form-required" aria-hidden="true">*</span></label>
                    <input class="form-input" type="text" id="fullName" name="fullName" placeholder="Jane Smith" autocomplete="name" required />
                    <span class="form-error" id="err-fullName" role="alert"></span>
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="phone">Phone Number <span class="form-required" aria-hidden="true">*</span></label>
                    <input class="form-input" type="tel" id="phone" name="phone" placeholder="(214) 555-0100" autocomplete="tel" required />
                    <span class="form-error" id="err-phone" role="alert"></span>
                  </div>
                </div>

                <div class="form-row">
                  <div class="form-group">
                    <label class="form-label" for="email">Email Address <span class="form-required" aria-hidden="true">*</span></label>
                    <input class="form-input" type="email" id="email" name="email" placeholder="jane@example.com" autocomplete="email" required />
                    <span class="form-error" id="err-email" role="alert"></span>
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="city">City / Neighborhood</label>
                    <input class="form-input" type="text" id="city" name="city" placeholder="Dallas, Plano, Southlake…" autocomplete="address-level2" />
                  </div>
                </div>

                <div class="form-step__nav form-step__nav--split">
                  <button type="button" class="btn btn-outline-dark form-back" data-back="2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                    </svg>
                    Back
                  </button>
                  <button type="submit" class="btn btn-primary form-submit" id="submit-btn">
                    <span id="submit-label">Send My Request</span>
                    <svg id="submit-arrow" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                    </svg>
                    <svg id="submit-spinner" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" style="display:none">
                      <path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/>
                    </svg>
                  </button>
                </div>

                <p class="form-privacy">
                  <svg xmlns="http://www.w3.org/2000/svg" width="13" height="13" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                  </svg>
                  Your information is private and never sold.
                </p>

                <div class="form-error-banner" id="form-error-banner" role="alert" style="display:none">
                  Something went wrong — please try again or call us at <a href="tel:+12146214820">(214) 621-4820</a>.
                </div>
              </div>

            </form>
          </div><!-- /form-view -->

          <!-- Success state -->
