  <!-- Filter JS -->
  <script>
    const pills    = document.querySelectorAll<HTMLButtonElement>('.gallery-filter__pill');
    const cards    = document.querySelectorAll<HTMLElement>('.gallery-card');
    const noResults = document.getElementById('gallery-no-results') as HTMLParagraphElement;

    function filterGallery(slug: string) {
      let visible = 0;
      cards.forEach((card) => {
        const match = slug === 'all' || card.dataset.category === slug;
        card.style.display = match ? '' : 'none';
        if (match) visible++;
      });
      noResults.hidden = visible > 0;

      pills.forEach((p) => {
        const isActive = p.dataset.filter === slug;
        p.classList.toggle('is-active', isActive);
        p.setAttribute('aria-selected', isActive ? 'true' : 'false');
      });
    }

    pills.forEach((pill) => {
      pill.addEventListener('click', () => filterGallery(pill.dataset.filter!));
    });
  </script>

