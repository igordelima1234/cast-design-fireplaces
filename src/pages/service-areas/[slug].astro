export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
import PortableText from '../../components/PortableText.astro';
import { safeFetch } from '../../../sanity/lib/client';

// DFW cities served — used for getStaticPaths fallback until Sanity has data
const legacyCities = [
  { city: 'Dallas',       slug: 'dallas',       state: 'TX' },
  { city: 'Fort Worth',   slug: 'fort-worth',   state: 'TX' },
  { city: 'Plano',        slug: 'plano',         state: 'TX' },
  { city: 'Southlake',    slug: 'southlake',     state: 'TX' },
  { city: 'McKinney',     slug: 'mckinney',      state: 'TX' },
  { city: 'Frisco',       slug: 'frisco',        state: 'TX' },
  { city: 'Allen',        slug: 'allen',         state: 'TX' },
  { city: 'Prosper',      slug: 'prosper',       state: 'TX' },
  { city: 'Flower Mound', slug: 'flower-mound',  state: 'TX' },
  { city: 'Keller',       slug: 'keller',        state: 'TX' },
  { city: 'Colleyville',  slug: 'colleyville',   state: 'TX' },
  { city: 'Grapevine',    slug: 'grapevine',     state: 'TX' },
];

export async function getStaticPaths() {
  const sanityAreas = await safeFetch<{ slug: string }[]>(
    `*[_type == "serviceArea"]{ "slug": slug.current }`
  );

  // Merge Sanity slugs + legacy slugs so all city pages always build
  const legacySlugs = [
    'dallas','fort-worth','plano','southlake','mckinney',
    'frisco','allen','prosper','flower-mound','keller','colleyville','grapevine',
  ];
  const sanitySlugs = (sanityAreas ?? []).map((a) => a.slug);
  const allSlugs = [...new Set([...sanitySlugs, ...legacySlugs])];
  return allSlugs.map((slug) => ({ params: { slug } }));
}

const { slug } = Astro.params;

// Try Sanity first
const sanityArea = await safeFetch<any>(
  `*[_type == "serviceArea" && slug.current == $slug][0]{
    city,
    "slug": slug.current,
    state,
    "heroImage": heroImage.asset->url,
    "heroAlt": heroImage.alt,
    seoDescription,
    body
  }`,
  { slug }
);

// Build the area object — Sanity data takes priority, legacy fills the rest
const legacyData = legacyCities.find((c) => c.slug === slug);

const area = sanityArea ?? (legacyData ? {
  city: legacyData.city,
  slug: legacyData.slug,
  state: legacyData.state,
  heroImage: '/images/Gramercy- Meadow-257.jpg',
  heroAlt: `Cast stone fireplace in ${legacyData.city}, ${legacyData.state}`,
  seoDescription: `Cast Design Fireplaces delivers and installs premium cast stone fireplace mantels, surrounds, and range hoods in ${legacyData.city}, ${legacyData.state}. Schedule a free consultation today.`,
  body: null,
} : null);

if (!area) {
  return Astro.redirect('/service-areas');
}
