---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
import { safeFetch } from '../../../sanity/lib/client';

// Fetch all service areas from Sanity
const rawAreas = await safeFetch<any[]>(
  `*[_type == "serviceArea"] | order(city asc) {
    city,
    "slug": slug.current,
    state,
    "heroImage": heroImage.asset->url,
    seoDescription
  }`
);

// Fallback list of DFW cities if Sanity has no data yet
const legacyAreas = [
  { city: 'Dallas',       slug: 'dallas',       state: 'TX', heroImage: '/images/Ashton.jpeg',               seoDescription: 'Cast stone fireplace mantels and surrounds delivered and installed in Dallas, TX.' },
  { city: 'Fort Worth',   slug: 'fort-worth',   state: 'TX', heroImage: '/images/Gramercy- Meadow-257.jpg',  seoDescription: 'Premium cast stone fireplaces for Fort Worth homes.' },
  { city: 'Plano',        slug: 'plano',         state: 'TX', heroImage: '/images/FM-1.jpeg',                 seoDescription: 'Custom cast stone fireplace mantels for Plano, TX.' },
  { city: 'Southlake',    slug: 'southlake',     state: 'TX', heroImage: '/images/IMG_1284 Large.jpeg',       seoDescription: 'Luxury cast stone fireplaces for Southlake, TX homes.' },
  { city: 'McKinney',     slug: 'mckinney',      state: 'TX', heroImage: '/images/Gramercy Remodel- Sunnyland-188.jpg', seoDescription: 'Cast stone fireplace surrounds delivered to McKinney, TX.' },
  { city: 'Frisco',       slug: 'frisco',        state: 'TX', heroImage: '/images/FM-2.jpeg',                 seoDescription: 'Custom cast stone mantels and range hoods for Frisco, TX.' },
  { city: 'Allen',        slug: 'allen',         state: 'TX', heroImage: '/images/Ashton 2.jpeg',             seoDescription: 'Cast stone fireplace design and installation in Allen, TX.' },
  { city: 'Prosper',      slug: 'prosper',       state: 'TX', heroImage: '/images/Gramercy- Meadow-288 Large.jpeg', seoDescription: 'Premium cast stone fireplaces for Prosper, TX.' },
  { city: 'Flower Mound', slug: 'flower-mound',  state: 'TX', heroImage: '/images/Ashton.jpeg',               seoDescription: 'Cast stone fireplace surrounds for Flower Mound, TX.' },
  { city: 'Keller',       slug: 'keller',        state: 'TX', heroImage: '/images/FM-1.jpeg',                 seoDescription: 'Custom cast stone mantels delivered to Keller, TX.' },
  { city: 'Colleyville',  slug: 'colleyville',   state: 'TX', heroImage: '/images/Gramercy- Meadow-257.jpg',  seoDescription: 'Luxury cast stone fireplaces for Colleyville, TX.' },
  { city: 'Grapevine',    slug: 'grapevine',     state: 'TX', heroImage: '/images/Gramercy Remodel- Sunnyland-188.jpg', seoDescription: 'Cast stone fireplace design in Grapevine, TX.' },
];

const areas = (rawAreas && rawAreas.length > 0) ? rawAreas : legacyAreas;
---

<BaseLayout
  title="Service Areas | Cast Design Fireplaces | Dallas–Fort Worth"
  description="Cast Design Fireplaces delivers and installs custom cast stone fireplace mantels, surrounds, and range hoods throughout the Dallas–Fort Worth metroplex."
  canonical="/service-areas"
>

  <!-- ═══ TOP BAR ═══ -->
  <div class="top-bar">
    <div class="container">
      <div class="top-bar__areas">
        <span>Areas We Serve</span>
        <a href="/service-areas/dallas">Dallas</a>
        <span class="sep">·</span>
        <a href="/service-areas/fort-worth">Fort Worth</a>
        <span class="sep">·</span>
        <a href="/service-areas/plano">Plano</a>
        <span class="sep">·</span>
        <a href="/service-areas/southlake">Southlake</a>
        <span class="sep">·</span>
        <a href="/service-areas/mckinney">McKinney</a>
        <span class="sep">·</span>
        <a href="/service-areas">All DFW</a>
      </div>
      <div class="top-bar__phone">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
        </svg>
        Call for a Free Consultation&nbsp;
        <a href="tel:+12146214820">(214) 621-4820</a>
      </div>
    </div>
  </div>

  <!-- ═══ NAVIGATION ═══ -->
  <nav class="nav" aria-label="Main navigation">
    <div class="container">
      <a href="/" class="nav__logo" aria-label="Cast Design Fireplaces – Home">
        <span class="nav__logo-main">Cast Design</span>
        <span class="nav__logo-sub">Fireplaces</span>
      </a>
      <ul class="nav__links" role="list">
        <li><a href="/gallery">Gallery</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/service-areas" aria-current="page">Service Areas</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact" class="nav__cta">Free Consultation</a></li>
      </ul>
      <button class="nav__hamburger" aria-label="Open menu" aria-expanded="false" aria-controls="mobile-menu">
        <span></span><span></span><span></span>
      </button>
    </div>
  </nav>

  <!-- ═══ MOBILE MENU ═══ -->
  <div class="mobile-menu" id="mobile-menu" aria-hidden="true">
    <div class="mobile-menu__backdrop"></div>
    <div class="mobile-menu__panel">
      <div class="mobile-menu__header">
        <a href="/" class="nav__logo" aria-label="Cast Design Fireplaces – Home">
          <span class="nav__logo-main">Cast Design</span>
          <span class="nav__logo-sub">Fireplaces</span>
        </a>
        <button class="mobile-menu__close" aria-label="Close menu">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <nav class="mobile-menu__nav" aria-label="Mobile navigation">
        <ul role="list">
          <li><a href="/gallery">Gallery</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/service-areas" aria-current="page">Service Areas</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>
      <div class="mobile-menu__footer">
        <a href="/contact" class="mobile-menu__cta">
          Schedule Free Consultation
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
        <a href="tel:+12146214820" class="mobile-menu__call">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          (214) 621-4820
        </a>
      </div>
    </div>
  </div>

  <script>
    const hamburger = document.querySelector<HTMLButtonElement>('.nav__hamburger');
    const closeBtn  = document.querySelector<HTMLButtonElement>('.mobile-menu__close');
    const backdrop  = document.querySelector<HTMLElement>('.mobile-menu__backdrop');
    const menu      = document.querySelector<HTMLElement>('.mobile-menu');
    function openMenu()  { menu!.classList.add('is-open'); menu!.setAttribute('aria-hidden','false'); hamburger!.setAttribute('aria-expanded','true');  document.body.style.overflow='hidden'; }
    function closeMenu() { menu!.classList.remove('is-open'); menu!.setAttribute('aria-hidden','true'); hamburger!.setAttribute('aria-expanded','false'); document.body.style.overflow=''; }
    hamburger?.addEventListener('click', openMenu);
    closeBtn?.addEventListener('click', closeMenu);
    backdrop?.addEventListener('click', closeMenu);
    document.addEventListener('keydown', (e) => { if (e.key==='Escape') closeMenu(); });
  </script>

  <!-- ═══ PAGE HERO ═══ -->
  <section class="page-hero" aria-label="Service areas hero">
    <img
      class="page-hero__bg"
      src="/images/Gramercy- Meadow-257.jpg"
      alt="Elegant cast stone fireplace installed in a DFW home"
      fetchpriority="high"
    />
    <div class="page-hero__overlay" aria-hidden="true"></div>
    <div class="page-hero__content">
      <div class="container">
        <p class="hero__eyebrow">Serving Dallas–Fort Worth</p>
        <h1 class="page-hero__heading">
          Cast Stone <em>Delivered</em> Across the Metroplex
        </h1>
        <p class="page-hero__sub">
          We design, fabricate, and install premium cast stone fireplaces throughout DFW — no showroom visit required.
        </p>
      </div>
    </div>
  </section>

  <!-- ═══ INTRO ═══ -->
  <section style="background: var(--color-white); padding: 72px 0 56px;">
    <div class="container" style="max-width: 760px; text-align: center;">
      <h2 style="font-family: var(--ff-serif); font-size: clamp(1.6rem, 3vw, 2.2rem); color: var(--color-stone); margin-bottom: 20px;">
        Where We Work
      </h2>
      <p style="color: var(--color-text-muted); font-size: 1.05rem; line-height: 1.8;">
        Our studio is based in Irving, TX. We deliver and install throughout the DFW metroplex — from Southlake and Keller in the west to McKinney and Allen in the north, Dallas proper, and everywhere in between. Lead times are typically 4–8 weeks from design approval.
      </p>
    </div>
  </section>

  <!-- ═══ CITY GRID ═══ -->
  <section style="background: var(--color-cream); padding: 0 0 80px;">
    <div class="container">
      <div class="gallery-grid" style="gap: 16px;">
        {areas.map((area: any) => (
          <a
            href={`/service-areas/${area.slug}`}
            class="gallery-card"
            aria-label={`${area.city}, ${area.state} — Cast Design Fireplaces service area`}
          >
            <div class="gallery-card__img-wrap">
              <img
                src={area.heroImage ?? '/images/Ashton.jpeg'}
                alt={`Cast stone fireplace in ${area.city}, ${area.state}`}
                loading="lazy"
                class="gallery-card__img"
              />
              <div class="gallery-card__overlay" aria-hidden="true">
                <span class="gallery-card__view">
                  View City Page
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                  </svg>
                </span>
              </div>
            </div>
            <div class="gallery-card__body">
              <span class="gallery-card__cat">{area.state}</span>
              <h3 class="gallery-card__name">{area.city}</h3>
              {area.seoDescription && (
                <p class="gallery-card__tagline">{area.seoDescription}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- ═══ CTA ═══ -->
  <section class="gallery-cta" aria-labelledby="service-cta-heading">
    <div class="container">
      <div class="gallery-cta__inner">
        <div>
          <p class="hero__eyebrow" style="color: var(--color-gold-light)">Don't see your city?</p>
          <h2 class="gallery-cta__title" id="service-cta-heading">
            We serve the full DFW metroplex
          </h2>
          <p class="gallery-cta__sub">
            If you're in the greater Dallas–Fort Worth area, we can deliver and install. Call us or fill out the form — we'll confirm coverage and schedule a free consultation.
          </p>
        </div>
        <div style="display:flex; flex-direction:column; gap:12px; min-width:220px;">
          <a href="/contact" class="btn btn-outline">Schedule Free Consultation</a>
          <a href="tel:+12146214820" class="btn btn-primary">(214) 621-4820</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══ FOOTER ═══ -->
  <footer class="footer" aria-label="Site footer">
    <div class="container">
      <div class="footer__top">
        <div>
          <div class="footer__brand-name">Cast Design Fireplaces</div>
          <div class="footer__brand-tag">DFW's Cast Stone Specialists</div>
          <p class="footer__brand-desc">Premium cast stone fireplace mantels, surrounds, and architectural stone products handcrafted for Dallas–Fort Worth homes since 2004.</p>
          <div class="footer__contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>
            <a href="tel:+12146214820">(214) 621-4820</a>
          </div>
          <div class="footer__contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
            <a href="mailto:hello@castdesignfireplaces.com">hello@castdesignfireplaces.com</a>
          </div>
          <div class="footer__contact-item">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>
            <span>Irving, TX (Serving All DFW)</span>
          </div>
        </div>
        <div class="footer__col">
          <h4>Products</h4>
          <ul>
            <li><a href="/products/fireplace-mantels">Fireplace Mantels</a></li>
            <li><a href="/products/fireplace-surrounds">Fireplace Surrounds</a></li>
            <li><a href="/products/outdoor-fireplaces">Outdoor Fireplaces</a></li>
            <li><a href="/products/range-hoods">Range Hoods</a></li>
            <li><a href="/products/corbels-columns">Corbels &amp; Columns</a></li>
          </ul>
        </div>
        <div class="footer__col">
          <h4>Company</h4>
          <ul>
            <li><a href="/about">About Us</a></li>
            <li><a href="/gallery">Gallery</a></li>
            <li><a href="/blog">Blog</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>
        <div class="footer__col">
          <h4>Areas We Serve</h4>
          <ul>
            <li><a href="/service-areas/dallas">Dallas</a></li>
            <li><a href="/service-areas/fort-worth">Fort Worth</a></li>
            <li><a href="/service-areas/plano">Plano</a></li>
            <li><a href="/service-areas/southlake">Southlake</a></li>
            <li><a href="/service-areas/mckinney">McKinney</a></li>
            <li><a href="/service-areas/frisco">Frisco</a></li>
            <li><a href="/service-areas">All DFW Areas</a></li>
          </ul>
        </div>
      </div>
      <div class="footer__bottom">
        <p>&copy; {new Date().getFullYear()} Cast Design Fireplaces. All rights reserved. Irving, TX.</p>
        <div style="display: flex; gap: 20px;">
          <a href="/privacy-policy">Privacy Policy</a>
          <a href="/terms">Terms of Service</a>
          <a href="/sitemap.xml">Sitemap</a>
        </div>
      </div>
    </div>
  </footer>

</BaseLayout>
